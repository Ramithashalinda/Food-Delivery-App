<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFood">
    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/back_btn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView

        android:id="@+id/headertext"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Pizza MI -Colombo"
        android:textSize="30sp"
       />

    <TextView
        android:id="@+id/locationtext"
        android:layout_width="200dp"
        android:layout_marginTop="130dp"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:textColor="#000000"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:text="Location is not selected"
        android:textSize="20sp"
        />
    <Button
        android:layout_marginBottom="20dp"
        android:textColor="#FF0000"
        android:text="Change"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="145dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/change_btn"
        android:background="@drawable/search_bg_white" />
    <TextView
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:background="#000000"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:layout_width="match_parent"
        android:layout_marginTop="220dp"
        android:background="#000000"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/text2"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Yout items"
        android:textSize="25sp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="300dp">


        <ListView
            android:id="@+id/lvProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <Button
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:text=" confirm Order"
        android:backgroundTint="#FF0000"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/Orderbtn"

        />

    <TextView
        android:id="@+id/subtotaltxt"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginBottom="165dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Subtotal"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/delevertxt"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Delivery Fee"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/Totaltxt"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Total"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/totalRS"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="00000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/deliveryRS"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="00000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/subtotalRs"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginBottom="165dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="00000"
        android:textSize="20sp"
        />




</RelativeLayout>